{
  "name": "exercism/php",
  "autoload": {
    "Exercism\\": "src",
    "Exercism\\Exercises\\": "exercises"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "php": "^7.4 || ^8.0",
    "phpunit/phpunit": "^9.6 || ^10.5",
    "slevomat/coding-standard": "^8.14.1",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "scripts": {
    "ci": [
        "@configlet:fmt",
        "@lint:check",
        "@tests:run"
    ],
    "configlet:fmt": "bin/configlet fmt",
    "format:fix": [
        "@lint:fix",
        "@configlet:fmt"
    ],
    "lint:check": "phpcs",
    "lint:fix": "phpcbf",
    "tests:run": "PHPUNIT_BIN='phpunit' bin/test.sh"
  }
}
