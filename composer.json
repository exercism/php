{
  "name": "exercism/php",
  "autoload": {
    "Exercism\\": "src",
    "Exercism\\Exercises\\": "exercises"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "php": "^7.4|^8.0",
    "phpunit/phpunit": "^9.6",
    "slevomat/coding-standard": "^8.14.1",
    "squizlabs/php_codesniffer": "^3.8"
  },
  "scripts": {
    "lint:check": "phpcs -v",
    "lint:fix": "phpcbf",
    "tests:run": "PHPUNIT_BIN='phpunit' bin/test.sh"
  }
}
